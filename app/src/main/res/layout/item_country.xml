<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small_offset"
    android:background="@color/light_gray"
    android:padding="@dimen/small_offset">

    <ImageView
        android:id="@+id/iv_country_flag"
        android:layout_width="100dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/ivCountryFlagContentDescription" />

    <TextView
        android:id="@+id/tv_country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_offset"
        android:lines="1"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintStart_toEndOf="@id/iv_country_flag"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Country name" />

    <TextView
        android:id="@+id/tv_country_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_offset"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_country_flag"
        tools:text="Region" />

    <TextView
        android:id="@+id/tv_country_subregion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_offset"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_country_region"
        tools:text="Subregion" />

</androidx.constraintlayout.widget.ConstraintLayout>